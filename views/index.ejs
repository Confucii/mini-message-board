<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/new">New message</a>
    <div class="messages">
      <% messages.forEach(message => { %>
      <div class="message">
        <p>Name: <%= message.user %></p>
        <p>Message: <%= message.text %></p>
        <p>
          <%= message.added.toLocaleString('default', { day:'numeric', month:
          'long', hour: 'numeric', minute: 'numeric', second: 'numeric' }); %>
        </p>
      </div>
      <br />
      <%})%>
    </div>
  </body>
</html>
